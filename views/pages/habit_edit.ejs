<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../partials/header %>
  </head>

  <body>
    <header>
      <%- include ../partials/nav %>
    </header>
    <main>
      
    
    <div class="container">

      <div class="starter-template">
      <br>
      <br>
        <h1><%= habitForm.title %></h1>
        <p class="lead">Use this form to establish a bad habit:</p>
        <form class="form-horizontal" action="<%= habitForm.habitURL %>" method="<%= habitForm.submitMethod %>">
        <fieldset>


        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="name">Habit Name:</label>  
          <div class="col-md-6">
          <input id="name" name="name" type="text" placeholder="placeholder" class="form-control input-md" required="">
          <span class="help-block">Please name your bad habit in the above field. </span>  
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="type of bad habit">Habit type:</label>
          <div class="col-md-6">
            <select id="type" name="type" class="form-control">
              <option value="0">None</option>
              <option value="1">smoking</option>
              <option value="2">coffee</option>
              <option value="3">procrastenating</option>
              <option value="4">snacking</option>
              <option value="5">TV</option>
              <option value="6">Over spending</option>
            </select>
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="scale 1-5">Degree:</label>
          <div class="col-md-6">
            <select id="scale 1-5" name="scale 1-5" class="form-control">
              <option value="0">None</option>
              <option value="1">beyond hope</option>
              <option value="2">pray for me</option>
              <option value="3">I can see the light</option>
              <option value="4">baby steps</option>
              <option value="5">I'm running!</option>
              <option value="6">Crushed it!</option>
            </select>
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="Frequency">Daily Frequency:</label>
          <div class="col-md-6">
            <select id="Frequency" name="frequency" class="form-control">
              <option value="0">None</option>
              <option value="1"> >5</option>
              <option value="2"> >10</option>
              <option value="3"> >20</option>
              <option value="4"> >40</option>
              <option value="5"> >80</option>
            </select>
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-md-4 control-label" for="extras">Years of slacking:</label>
          <div class="col-md-4">
          <div class="checkbox">
            <label for="extras-0">
              <input type="checkbox" name="extras" id="extras-0" value="1">
              1 year
            </label>
            <label for="extras-1">
              <input type="checkbox" name="extras" id="extras-1" value="2">
              2 years
            </label>
            <label for="extras-2">
              <input type="checkbox" name="extras" id="extras-2" value="3">
              3 years
            </label>
            <label for="extras-3">
              <input type="checkbox" name="extras" id="extras-3" value="4">
              4+ years
            </label>
          </div>
          </div>
        </div>

        
        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="submit">Submit:</label>
          <div class="col-md-4">
            <button id="submit" type="submit" class="btn btn-lg btn-success">Create</button>
            <span class="help-block">Please click button to compile data. </span> 
          </div>
        </div>

        </fieldset>
        </form>

      </div>

    </div><!-- /.container -->



    </main>



    <%- include ../partials/footer %>
    
  </body>
</html>
